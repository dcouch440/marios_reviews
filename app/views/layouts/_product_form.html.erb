<div class="form-page">
  <div class="form-side">
    <%= render "layouts/errors", :object => @product %>
    <div class="form">
      <%= form_for @product do |f| %>
        <div>
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div>
          <%= f.label :cost %>
          <%= f.text_field :cost %>
        </div>
        <div>
          <%= f.label :country_of_origin %>
          <%= f.text_field :country_of_origin %>
        </div>
        <button type="submit">Submit</button>
