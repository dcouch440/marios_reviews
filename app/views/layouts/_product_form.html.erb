<div class="titleize">
  <%= render "layouts/errors", :object => @product %>
</div>

<div>
  <%= form_for @product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :cost %>
    <%= f.text_field :cost %>
    <%= f.label :country_of_origin %>
    <%= f.text_field :country_of_origin %>

    <%= f.submit :Submit %>
  <% end %>
</div>

<div class="titleize">
  <%= link_to "Return to products", products_path %>
</div>