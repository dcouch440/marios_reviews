<div>
  <%= render "layouts/errors", :object => @product %>
</div>

<div class="form">
  <%= form_for @product do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :cost %>
      <%= f.text_field :cost %>
    </div>
    <div>
      <%= f.label :country_of_origin %>
      <%= f.text_field :country_of_origin %>
    </div>
    <%= f.submit :Submit %>
  <% end %>
</div>

<div class="nav-link">
  <%= link_to "Return to products", products_path %>
</div>